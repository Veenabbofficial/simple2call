            font-size: 16px;
            font-family: lato;
            text-transform: capitalize;
        }

        .description {
            margin: auto;
            text-align: justify;

        }

        .items--table {
            width: 100%;
            padding: 10px;

            thead {
                background: #ddd;
                color: #111;
                text-align: center;
                font-weight: 800;
            }

            tbody {
                text-align: center;
            }

            .total-price {
                border: 2px solid #444;
                padding-top: 4px;
                font-weight: 800;
                background: lighten(green, 50%);
            }
        }

        .sessiontitle {
            text-align: center;
            font-family: initial;
            padding: 1px;
            width: 100%;
            text-transform: capitalize;
            font-size: 14px;
			text-decoration:underline;
			

        }

        .spansubtitle {
            font-size: 16px;
            font-weight: 600;
        }

        .bottomcls {
            position: relative;
            top: -18px;
            font-size: 11px;
            font-family: serif;
            color: #795548;
        }
        
    </style>
</head>

